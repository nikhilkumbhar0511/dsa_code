// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int partition(vector<int>&a,int l,int h){
    int x=a[h];
    int i=l-1;
    for(int j=l;j<=h-1;j++){
        if(a[j]<x){
            i++;
            swap(a[i],a[j]);
        }
    }
    swap(a[i+1],a[h]);
    return i+1;
}
void quicksort(vector<int>&a,int l,int h){
    if(l < h){
        int p=partition(a,l,h);
        quicksort(a,l,p-1);
        quicksort(a,p+1,h);
    }
}
int main() {
    // Write C++ code here
    vector<int>a={1,2,4,5,3,2,1,7};
    int e=a.size();
    quicksort(a,0,e-1);
    for(int i=0;i<e;i++){
        cout<<a[i]<<" ";
    }
    cout<<endl;
    return 0;
}
